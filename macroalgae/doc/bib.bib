   issn = {00253162},
   issue = {9},
   journal = {Marine Biology},
   pages = {2011-2022},
   publisher = {Springer Verlag},
   title = {Growth dynamics of Saccharina latissima (Laminariales, Phaeophyceae) in Aarhus Bay, Denmark, and along the species' distribution range},
