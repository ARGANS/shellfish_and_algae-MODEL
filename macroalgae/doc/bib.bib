   doi = {10.1017/s0025315401004532},
   issn = {00253154},
   issue = {5},
   journal = {Journal of the Marine Biological Association of the United Kingdom},
   pages = {727-734},
   publisher = {Cambridge University Press},
   title = {Carbon and nitrogen content of Laminaria saccharina in the eastern English Channel: Biometrics and seasonal variations},
   volume = {81},
   year = {2001},
}

